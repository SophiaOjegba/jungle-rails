<nav class="navbar navbar-expand-lg navbar-dark sticky-nav">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">Jungle</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <!-- Categories -->
        <% Category.all.each do |category| %>
          <li class="nav-item">
            <%= link_to category.name, category, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav">
        <!-- Admin Dropdown -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-danger"
            href="#"
            id="navbarDropdownAdmin"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Admin
          </a>
          <ul class="dropdown-menu dropdown-menu-dark">
            <li><%= link_to 'Dashboard', [:admin, :root], class: "nav-link" %></li>
            <li><%= link_to 'Products', [:admin, :products], class: "nav-link" %></li>
          </ul>
        </li>

        <!-- Cart -->
        <li class="nav-item end-0">
          <%= link_to cart_path, class: "nav-link " do %> <%= fa_icon "shopping-cart" %>
          My Cart (<%= cart.size %>) <% end %>
        </li>

        <!-- Login/Signup Buttons -->
        <% if current_user %>
          <!-- If user is logged in, show logout button -->
          <li><%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link' %></li>


        <% else %>
          <!-- If user is not logged in, show login and signup buttons -->
          <li><%= link_to 'Login', new_session_path, class: "nav-link" %></li>
          <li><%= link_to 'Sign Up', new_user_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
